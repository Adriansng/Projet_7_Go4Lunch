<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_workmates"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.mainActivity.fragment.workmates.WorkmatesFragment"
    android:orientation="vertical">

    <!-- MESSAGE RECYCLER VIEW EMPTY -->
    <TextView
        android:id="@+id/workmate_text_view_recycler_view_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_large_margin"
        android:text="@string/workmates_message_error"
        android:textAlignment="center" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_workmates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>